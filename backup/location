    <!-- Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script>
        // Initialize the application
        document.addEventListener('DOMContentLoaded', function() {
            // Simulate loading user data
            setTimeout(() => {
                document.getElementById('name').textContent = 'Admin User';
                document.getElementById('userEmail').textContent = 'admin@washhub.com';
            }, 500);
            
            // Load sample data (replace with actual API calls)
            loadSampleLocations();
            
            // Setup event listeners
            setupEventListeners();
        });

        // Sample data (replace with actual API calls)
        function loadSampleLocations() {
            const loadingSpinner = document.getElementById('loadingSpinner');
            const locationsGrid = document.getElementById('locationsGrid');
            const noLocations = document.getElementById('noLocations');
            
            // Show loading spinner
            loadingSpinner.style.display = 'flex';
            locationsGrid.style.display = 'none';
            
            // Simulate API call delay
            setTimeout(() => {
                const sampleLocations = [
                    {
                        id: 1,
                        name: "Downtown Car Wash",
                        url: "https://goo.gl/maps/XYZ123",
                        status: "active"
                    },
                    {
                        id: 2,
                        name: "Westside Auto Spa",
                        url: "https://goo.gl/maps/ABC456",
                        status: "active"
                    },
                    {
                        id: 3,
                        name: "Northside Wash Center",
                        url: "https://goo.gl/maps/DEF789",
                        status: "inactive"
                    }
                ];
                
                renderLocations(sampleLocations);
                updateStats(sampleLocations);
                
                // Hide loading spinner
                loadingSpinner.style.display = 'none';
                locationsGrid.style.display = 'block';
            }, 1000);
        }

        // Render locations
        function renderLocations(locations) {
            const locationsGrid = document.getElementById('locationsGrid');
            const noLocations = document.getElementById('noLocations');
            
            if (locations.length === 0) {
                locationsGrid.innerHTML = '';
                noLocations.style.display = 'block';
                return;
            }
            
            noLocations.style.display = 'none';
            locationsGrid.innerHTML = '';
            
            locations.forEach(location => {
                const locationCard = document.createElement('div');
                locationCard.className = 'col-md-6 col-lg-4 mb-4';
                locationCard.innerHTML = `
                    <div class="location-card">
                        <div class="location-card-header">
                            <h5 class="location-card-title">${location.name}</h5>
                            <span class="badge ${location.status === 'active' ? 'bg-success' : 'bg-secondary'}">
                                ${location.status === 'active' ? 'Active' : 'Inactive'}
                            </span>
                        </div>
                        <div class="location-card-body">
                            <div class="location-url">
                                <i class="fas fa-map-marker-alt"></i>
                                <a href="${location.url}" target="_blank">View on Map</a>
                            </div>
                            <div class="location-actions">
                                <button class="btn btn-sm btn-outline-primary" onclick="editLocation(${location.id})">
                                    <i class="fas fa-edit"></i> Edit
                                </button>
                                <button class="btn btn-sm btn-outline-danger" onclick="deleteLocation(${location.id})">
                                    <i class="fas fa-trash"></i> Delete
                                </button>
                            </div>
                        </div>
                    </div>
                `;
                
                locationsGrid.appendChild(locationCard);
            });
        }

        // Update statistics
        function updateStats(locations) {
            document.getElementById('totalLocations').textContent = locations.length;
            document.getElementById('activeLocations').textContent = 
                locations.filter(loc => loc.status === 'active').length;
        }

        // Setup event listeners
        function setupEventListeners() {
            // Search functionality
            document.getElementById('searchLocations').addEventListener('input', function(e) {
                const searchTerm = e.target.value.toLowerCase();
                // In a real app, you would filter the locations array here
                console.log('Searching for:', searchTerm);
            });
            
            // Form submissions
            document.getElementById('addLocationForm').addEventListener('submit', function(e) {
                e.preventDefault();
                // In a real app, you would submit the form data to your API
                const locationName = document.getElementById('locationName').value;
                const locationUrl = document.getElementById('locationUrl').value;
                
                showToast('Location added successfully!', 'success');
                bootstrap.Modal.getInstance(document.getElementById('addLocationModal')).hide();
                document.getElementById('addLocationForm').reset();
                
                // Reload locations (in a real app, this would be an API call)
                loadSampleLocations();
            });
            
            document.getElementById('editLocationForm').addEventListener('submit', function(e) {
                e.preventDefault();
                // In a real app, you would submit the form data to your API
                const locationId = document.getElementById('editLocationId').value;
                const locationName = document.getElementById('editLocationName').value;
                const locationUrl = document.getElementById('editLocationUrl').value;
                
                showToast('Location updated successfully!', 'success');
                bootstrap.Modal.getInstance(document.getElementById('editLocationModal')).hide();
                
                // Reload locations (in a real app, this would be an API call)
                loadSampleLocations();
            });
        }

        // Edit location
        function editLocation(id) {
            // In a real app, you would fetch the location data from your API
            const sampleLocations = [
                {
                    id: 1,
                    name: "Downtown Car Wash",
                    url: "https://goo.gl/maps/XYZ123",
                    status: "active"
                },
                {
                    id: 2,
                    name: "Westside Auto Spa",
                    url: "https://goo.gl/maps/ABC456",
                    status: "active"
                },
                {
                    id: 3,
                    name: "Northside Wash Center",
                    url: "https://goo.gl/maps/DEF789",
                    status: "inactive"
                }
            ];
            
            const location = sampleLocations.find(loc => loc.id === id);
            if (!location) return;
            
            document.getElementById('editLocationId').value = location.id;
            document.getElementById('editLocationName').value = location.name;
            document.getElementById('editLocationUrl').value = location.url;
            
            new bootstrap.Modal(document.getElementById('editLocationModal')).show();
        }

        // Delete location
        function deleteLocation(id) {
            if (confirm('Are you sure you want to delete this location?')) {
                // In a real app, you would make an API call to delete the location
                showToast('Location deleted successfully!', 'success');
                
                // Reload locations (in a real app, this would be an API call)
                loadSampleLocations();
            }
        }

        // Show toast notification
        function showToast(message, type = 'info') {
            const toastContainer = document.getElementById('toastContainer');
            const toast = document.createElement('div');
            toast.className = `toast show align-items-center text-white bg-${type === 'success' ? 'success' : 'danger'} border-0`;
            toast.role = 'alert';
            toast.setAttribute('aria-live', 'assertive');
            toast.setAttribute('aria-atomic', 'true');
            
            toast.innerHTML = `
                <div class="d-flex">
                    <div class="toast-body">
                        ${message}
                    </div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
            `;
            
            toastContainer.appendChild(toast);
            
            // Auto-remove toast after 5 seconds
            setTimeout(() => {
                toast.remove();
            }, 5000);
        }
    </script>
